cabal-version:      3.0
name:               example
version:            0.1.0
build-type:         Simple

common general
    build-depends:    base >=4
                    , evdev >=2.3.1 && <2.3.2
                    , evdev-streamly >=0.0.2 && <0.0.3
                    , streamly >=0.11.0 && <0.11.1
                    , streamly-core >=0.3.0 && <0.3.1
                    , bytestring >=0.12.2 && <0.12.3
    default-language: Haskell2010
    ghc-options:      -Wall

executable example
    import:           general
    main-is:          Main.hs
    hs-source-dirs:   app

test-suite example-test
    import:           general
    main-is:          Spec.hs
    hs-source-dirs:   test
    type:             exitcode-stdio-1.0
